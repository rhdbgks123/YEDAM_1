<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>
	<typeAliases>
		<typeAlias alias="user" type="com.yedam.vo.UserVO" />
		<typeAlias alias="menu" type="com.yedam.vo.MenuVO" />
		<typeAlias alias="Item" type="com.yedam.vo.ItemVO" />
		<typeAlias alias="review" type="com.yedam.vo.ReviewVO" />
		<typeAlias alias="myCart" type="com.yedam.vo.MyBasketVO" />
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver" />
				<property name="url"
					value="jdbc:oracle:thin:@127.0.0.1:1521:xe" />
				<property name="username" value="dev" />
				<property name="password" value="dev" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/yedam/mapper/UserMapper.xml" />
		<mapper resource="com/yedam/mapper/MenuMapper.xml" />
		<mapper resource="com/yedam/mapper/ItemMapper.xml" />
		<mapper resource="com/yedam/mapper/MyCartMapper.xml" />
		<mapper resource="com/yedam/mapper/OrderMapper.xml" />
		<mapper resource="com/yedam/mapper/OrderDetailMapper.xml" />
	</mappers>
</configuration>